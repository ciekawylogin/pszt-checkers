<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="400.0" maxWidth="400.0" minHeight="400.0" minWidth="400.0" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.View">
    <children>
        <Label layoutX="96.0" layoutY="144.0" styleClass="label_text" text="Difficulty" textAlignment="RIGHT">
         <effect>
            <DropShadow />
         </effect></Label>
        <ChoiceBox fx:id="difficulty" layoutX="163.0" layoutY="140.0" prefWidth="150.0" value="easy">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="easy" />
                    <String fx:value="medium" />
                    <String fx:value="hard" />
                </FXCollections>
            </items>
        </ChoiceBox>
        <Label layoutX="73.0" layoutY="186.0" styleClass="label_text" text="Player's color" textAlignment="RIGHT">
         <effect>
            <DropShadow />
         </effect></Label>
        <ChoiceBox fx:id="color" layoutX="163.0" layoutY="182.0" prefWidth="150.0" value="white">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="white" />
                    <String fx:value="black" />
                </FXCollections>
            </items>
        </ChoiceBox>
        <Label layoutX="71.0" layoutY="228.0" styleClass="label_text" text="Player's name" textAlignment="RIGHT">
         <effect>
            <DropShadow />
         </effect></Label>
        <TextField fx:id="name" layoutX="164.0" layoutY="224.0" prefWidth="150.0" />
        <Button fx:id="start" layoutX="150.0" layoutY="285.0" mnemonicParsing="false" onAction="#beginGame" prefWidth="100.0" text="Begin game" />
        <Button fx:id="exit" layoutX="150.0" layoutY="327.0" mnemonicParsing="false" onAction="#exitProgram" prefWidth="100.0" text="Exit" />
      <Text fx:id="welcome_text" layoutX="76.0" layoutY="100.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Checkers" textAlignment="CENTER" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
    </children>
</AnchorPane>
